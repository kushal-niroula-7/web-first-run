@using WebFirstRun.ViewModels.ProductVms;
@model CreateProductVm


<form method="post" class="card">
    <div class="card-header">
        Create Product
    </div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductCategoryId"></label>
            <select class="form-control" asp-for="ProductCategoryId" asp-items="Model.ProductCategoriesSelectList()"></select>
            <span class="text-danger" asp-validation-for="ProductCategoryId"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">
            </label>
            <textarea asp-for="Description" rows="5" class="form-control" placeholder="Your Product description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-success">
            Save
        </button>
    </div>
</form>